{
  "name": "redclay/field-guide-api",
  "description": "PHP API for the Red Clay Field Guide",
  "type": "project",
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "firebase/php-jwt": "^6.10",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.64",
    "phpunit/phpunit": "^11.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
